<!DOCTYPE html>

<p id="notice"><%= notice %></p>
<title>Listing Posts</title>

<body>
	<div class="wrapper">
		<div class="container">
			<h1>Listing Posts</h1>

			<form class="form">
				<table>
					<thead>
						<tr>
							<th>Group</th>
							<th>Goal</th>
							<th>User</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
						<% @post.each do |post| %>
						<tr>
							<td><%= post.group %></td>
							<td><%= post.goal %></td>
							<td><%= post.user.email %></td>
							<td><%= link_to 'Show', post %></td>
							<% if post.user == current_user %>
							<td><%= link_to 'Edit', edit_post_path(post) %></td>
							<td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?'} %></td>
							<% end %>
						</tr>
						<% end %>
					</tbody>
				</table>

				<br>

				<%= link_to 'New Post', new_post_path %>
			</form>
		</div>

		<ul class="bg-bubbles">
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ul>
	</div>


</body>
/<html>
