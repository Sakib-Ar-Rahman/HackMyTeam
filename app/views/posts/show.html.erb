<h1><%= @post.group %></h1><br>
<div><%= @post.goal %></div>






<%= link_to "Edit Post",edit_post_path(@post) %>

<%= link_to "Delete Post",post_path(@post), method: :delete, data:{ confirm: "Are you sure?"} %>

<div id="comments">
	<h5><%= @post.comments.count %> Comment(s) </h5>
	<%= render @post.comments %>

	<h3>Add a comment: </h3>
	<%= render "comments/form" %>
</div>
